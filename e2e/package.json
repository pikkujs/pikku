{
  "name": "@pikku/e2e",
  "private": true,
  "type": "module",
  "scripts": {
    "pikku": "pikku",
    "pikku:api": "pikku all --configFile deployments/api/pikku.config.json && tsc -p tsconfig.build.json",
    "pikku:worker": "pikku all --configFile deployments/worker/pikku.config.json && tsc -p tsconfig.build.json",
    "build": "yarn pikku && tsc -p tsconfig.build.json",
    "start:api": "node dist/src/runtime/start-api.js",
    "start:worker": "node dist/src/runtime/start-worker.js",
    "test": "yarn build && cucumber-js --import 'features/support/**/*.ts' --import 'features/step_definitions/**/*.ts' features/*.feature"
  },
  "dependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@pikku/cli": "workspace:*",
    "@pikku/core": "workspace:*",
    "@pikku/express": "workspace:*",
    "@pikku/pg": "workspace:*",
    "@pikku/queue-pg-boss": "workspace:*",
    "@pikku/schema-cfworker": "workspace:*",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/node": "^24",
    "tsx": "^4.21.0",
    "typescript": "^5.9"
  }
}
