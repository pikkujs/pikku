{
  "name": "@vramework/core",
  "version": "0.5.25",
  "author": "yasser.fadl@gmail.com",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "build:esm": "tsc -b && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -b tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "ncu": "ncu",
    "release": "npm run build && npm test",
    "test": "bash run-tests.sh",
    "test:watch": "bash run-tests.sh --watch",
    "test:coverage": "bash run-tests.sh --coverage"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./channel": {
      "import": "./dist/esm/channel/index.js",
      "require": "./dist/cjs/channel/index.js"
    },
    "./http": {
      "import": "./dist/esm/http/index.js",
      "require": "./dist/cjs/http/index.js"
    },
    "./http/vramework-http-session-service": {
      "import": "./dist/esm/http/vramework-http-session-service.js",
      "require": "./dist/cjs/http/vramework-http-session-service.js"
    },
    "./errors": {
      "import": "./dist/esm/errors/index.js",
      "require": "./dist/cjs/errors/index.js"
    },
    "./scheduler": {
      "import": "./dist/esm/scheduler/index.js",
      "require": "./dist/cjs/scheduler/index.js"
    },
    "./services": {
      "import": "./dist/esm/services/index.js",
      "require": "./dist/cjs/services/index.js"
    },
    "./schema": {
      "import": "./dist/esm/schema.js",
      "require": "./dist/cjs/schema.js"
    },
    "./types": "./dist/esm/types/index.d.ts"
  },
  "dependencies": {
    "@types/cookie": "^0.6.0",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cookie": "^1.0.1",
    "path-to-regexp": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.6"
  },
  "engines": {
    "node": ">=18"
  }
}
