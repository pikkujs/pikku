{
  "name": "@pikku/templates-aws-lambda",
  "main": "dist/index.mjs",
  "type": "module",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "ncu": "npx npm-check-updates",
    "ncu:pikku": "npx npm-check-updates -f '/@pikku/.*/'",
    "test": "bash ../functions/run-tests.sh --url http://localhost:3000/production --http",
    "start": "npm run build && serverless offline",
    "build": "rm -rf dist && esbuild ./src/main.ts --format=esm --minify --external:\"@aws-sdk/*\" --bundle --keep-names --sourcemap --platform=node --target=node20 --outdir=dist --out-extension:.js=.mjs --metafile=meta.json",
    "deploy": "npm run build && serverless deploy"
  },
  "dependencies": {
    "@pikku/aws-services": "^0.10.0",
    "@pikku/core": "^0.10.0",
    "@pikku/jose": "^0.10.0",
    "@pikku/lambda": "^0.10.0",
    "@pikku/schema-cfworker": "^0.10.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.914.0",
    "@aws-sdk/client-secrets-manager": "^3.914.0",
    "@aws-sdk/cloudfront-signer": "^3.914.0",
    "@aws-sdk/s3-request-presigner": "^3.914.0",
    "@types/aws-lambda": "^8.10.156",
    "@types/node": "^24",
    "esbuild": "0.25.11",
    "serverless": "^4.21.1",
    "serverless-offline": "^14.4.0",
    "serverless-offline-sqs": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9"
  }
}
