{
  "name": "@pikku/templates-mcp-server",
  "version": "0.1.5",
  "description": "Pikku Model Context Protocol (MCP) Server Template",
  "type": "module",
  "scripts": {
    "start": "tsx src/start.ts",
    "dev": "tsx --watch src/start.ts",
    "tsc": "tsc",
    "ncu": "npx npm-check-updates",
    "ncu:pikku": "npx npm-check-updates -f '/@pikku/.*/'",
    "test": "bash ../functions/run-tests.sh --mcp --ignore-server-ready-check",
    "test:mcp": "npx tsx client/mcp.ts"
  },
  "devDependencies": {
    "@pikku/cli": "^0.12.0",
    "@types/node": "^24.10.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@pikku/core": "^0.12.0",
    "@pikku/modelcontextprotocol": "^1.0.0"
  }
}
