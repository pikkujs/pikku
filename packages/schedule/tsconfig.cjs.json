{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "module": "CommonJS",
    "outDir": "dist/cjs",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@vramework/core/*": ["../core/dist/cjs/*"]
    }
  },
  "references": [
    {
      "path": "../core/tsconfig.cjs.json"
    }
  ],
  "exclude": ["node_modules", "dist"]
}
