    "@pikku/schema-cfworker": "^0.12.0",
    "ioredis": "^5.9.2",
    "pino-pretty": "^13.1.3",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9"
  },
  "devDependencies": {
    "@pikku/cli": "^0.12.0",
    "@types/node": "^24"
  }
