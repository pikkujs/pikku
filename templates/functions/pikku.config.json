{
  "$schema": "https://raw.githubusercontent.com/pikkujs/pikku/refs/heads/main/packages/cli/cli.schema.json",
  "srcDirectories": ["./src"],
  "outDir": "./.pikku",
  "tsconfig": "./tsconfig.json",
  "schema": {
    "supportsImportAttributes": true
  },
  "fetchFile": "client/pikku-fetch.gen.ts",
  "websocketFile": "client/pikku-websocket.gen.ts",
  "rpcWiringsFile": "client/pikku-rpc.gen.ts",
  "queueWiringsFile": "client/pikku-queue.gen.ts",
  "mcpJsonFile": "client/mcp/mcp.gen.json",
  "workflows": {
    "singleQueue": true,
    "path": "src/workflows/pikku.workflows.gen.ts"
  }
}
