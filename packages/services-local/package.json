{
  "name": "@vramework/services-local",
  "version": "0.4.1",
  "author": "yasser.fadl@gmail.com",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "build:esm": "tsc -b && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -b tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "ncu": "ncu",
    "release": "npm run build && npm test",
    "test": "mocha"
  },
  "exports": {
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    },
    "./*.d.ts": {
      "import": "./dist/esm/*.d.ts",
      "require": "./dist/cjs/*.d.ts"
    }
  },
  "peerDependencies": {
    "@vramework/core": "^0.4.1"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "jose": "^5.9.6"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^8",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.7",
    "chai": "^5",
    "chai-as-promised": "^8.0.0",
    "mocha": "^10.7.3",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6"
  }
}
