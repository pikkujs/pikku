{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "noUnusedLocals": true,
    "strict": true,
    "lib": [
      "es2020",
      "dom"
