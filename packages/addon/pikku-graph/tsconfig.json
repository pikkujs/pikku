{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "#pikku": ["./.pikku/pikku-types.gen.ts"]
    }
  },
  "include": ["src/**/*", "types/**/*", ".pikku/**/*.ts"],
  "exclude": ["node_modules", "dist", ".pikku/**/*.d.ts"]
}
