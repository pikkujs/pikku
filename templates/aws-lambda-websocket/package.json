{
  "name": "@pikku/templates-aws-lambda-websocket",
  "type": "module",
  "main": "dist/index.mjs",
  "private": true,
  "scripts": {
    "build:offline": "rm -rf dist && esbuild ./src/websocket.ts --format=esm --minify --bundle --keep-names --sourcemap --platform=node --target=node20 --outdir=dist --out-extension:.js=.mjs --metafile=meta.json",
    "dev": "npm run build:offline && serverless offline",
    "test:template": "bash run-tests.sh --url http://localhost:3000/production --websocket",
    "build": "npm run build:offline --external:\"@aws-sdk/*\"",
    "deploy": "npm run build && serverless deploy",
    "tsc": "tsc",
    "ncu": "npx npm-check-updates",
    "ncu:pikku": "npx npm-check-updates -f '/@pikku/.*/'"
  },
  "dependencies": {
    "@pikku/aws-services": "^0.9.3-next.0",
    "@pikku/core": "^0.9.12-next.0",
    "@pikku/lambda": "^0.9.4-next.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.864.0",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "@aws-sdk/cloudfront-signer": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24",
    "esbuild": "^0.25.9",
    "serverless": "^4.18.0",
    "serverless-esbuild": "^1.55.1",
    "serverless-offline": "^14.4.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9"
  }
}
