{
  "compilerOptions": {
    "module": "Node16",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": false,
    "paths": {
      "@vramework/core": ["./packages/core"],
      "@vramework/core/*": ["./packages/core/*"],
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
}
