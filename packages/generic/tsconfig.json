{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "noUnusedLocals": true,
    "strict": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src"]
}