{
  "compilerOptions": {
    "types": ["node", "mocha"],
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true
  }
}
