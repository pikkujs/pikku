{
  "name": "@vramework/cli",
  "version": "0.5.0",
  "author": "yasser.fadl@gmail.com",
  "license": "MIT",
  "bin": {
    "vramework": "dist/cjs/bin/vramework.js"
  },
  "type": "module",
  "main": "dist/cjs/bin/vramework.js",
  "module": "dist/esm/bin/vramework.js",
  "exports": {
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    },
    "./*.d.ts": {
      "import": "./dist/types/*.d.ts",
      "require": "./dist/types/*.d.ts"
    }
  },
  "scripts": {
    "tsc": "tsc",
    "build:esm": "tsc -b && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -b tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "ncu": "ncu -x '/.*glob.*/'",
    "release": "yarn build && npm test",
    "test": "mocha"
  },
  "peerDependencies": {
    "@vramework/core": "^0.5.0"
  },
  "dependencies": {
    "@types/cookie": "^0.6.0",
    "@types/uuid": "^10.0.0",
    "commander": "^12",
    "glob": "^10",
    "path-to-regexp": "^8.2.0",
    "ts-json-schema-generator": "^2.3.0",
    "typescript": "^5.6"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^8",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.8",
    "@types/sinon": "^17.0.3",
    "chai": "^5",
    "chai-as-promised": "^8.0.0",
    "mocha": "^10.7.3",
    "sinon": "^19.0.2"
  },
  "engines": {
    "node": ">=18"
  }
}
